<UserControl x:Class="testing1.Views.DiscoveryView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:testing1.ViewModels"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="700" d:DesignWidth="900">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="WhiteSmoke" BorderBrush="#D0D0D0" BorderThickness="0,0,0,1">
            <Grid Height="40">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Image Grid.Column="0"  Width="16" Height="16" Margin="0,0,5,0"/>
                <TextBlock Grid.Column="1" Text="Device Discovery"
                           VerticalAlignment="Center" FontFamily="Segoe UI" FontSize="24" FontWeight="SemiBold"/>

                <!-- Open Config Directory Button -->
                <Button Grid.Column="2"
        Content="📁"
        Command="{Binding OpenConfigDirectoryCommand}"
        ToolTip="Open device configuration folder"
        Padding="10,2"
        FontSize="17"
        Background="Transparent"
        BorderThickness="0"
        BorderBrush="Transparent"
        Cursor="Hand"/>

            </Grid>
        </Border>

        <!-- Title -->
        <!--TextBlock Grid.Row="1" Text="Available Devices on Network"
                   FontSize="16" FontWeight="Bold" Margin="15,5,15,5"/-->

        <!-- Static IP and Subnet Information -->
        <StackPanel Grid.Row="1" Orientation="Vertical" Margin="20,15,20,15" VerticalAlignment="Bottom">

            <!-- Ethernet Info -->
            <Grid Margin="0,0,0,2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="80"/>
                    <!-- Label -->
                    <ColumnDefinition Width="160"/>
                    <!-- IP -->
                    <ColumnDefinition Width="64"/>
                    <!-- 'Subnet:' label -->
                    <ColumnDefinition Width="*"/>
                    <!-- Subnet IP -->
                </Grid.ColumnDefinitions>

                <TextBlock Text="Ethernet IP :" Grid.Column="0" FontSize="14" FontWeight="SemiBold"/>
                <TextBlock Text="{Binding EthernetIP}" Grid.Column="1" FontSize="14" FontFamily="Segoe UI"/>
                <TextBlock Text="Subnet   :" Grid.Column="2" FontSize="14" FontWeight="SemiBold"/>
                <TextBlock Text="{Binding EthernetSubnet}" Grid.Column="3" FontSize="14" FontFamily="Segoe UI"/>
            </Grid>

            <!-- WiFi Info -->
            <Grid Margin="0,0,0,5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="80"/>
                    <ColumnDefinition Width="160"/>
                    <ColumnDefinition Width="64"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <TextBlock Text="WiFi IP        :" Grid.Column="0" FontSize="14" FontWeight="SemiBold"/>
                <TextBlock Text="{Binding WiFiIP}" Grid.Column="1" FontSize="14" FontFamily="Segoe UI"/>
                <TextBlock Text="Subnet   :" Grid.Column="2" FontSize="14" FontWeight="SemiBold"/>
                <TextBlock Text="{Binding WiFiSubnet}" Grid.Column="3" FontSize="14" FontFamily="Segoe UI"/>
            </Grid>

        </StackPanel>



        <!-- IP/Gateway Info, Subnet Scanner Info and Scan Button -->
        <Border Grid.Row="2" Background="WhiteSmoke" BorderBrush="White" BorderThickness="1" Margin="8,0,15,10">
            <Grid Margin="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Current IP and Gateway Info (Static) -->
                <!--StackPanel Grid.Row="1" Grid.Column="0" Orientation="Horizontal" Margin="0,0,0,10">
                    <TextBlock Text="Current IP: " FontWeight="SemiBold" FontSize="14" Margin="0,0,5,0"/>
                    <TextBlock Text="{Binding CurrentIP}" FontSize="14" FontFamily="Segoe UI" Margin="0,2,20,0"/>
                    <TextBlock Text="Gateway: " FontWeight="SemiBold" FontSize="14" Margin="0,0,5,0"/>
                    <TextBlock Text="{Binding Gateway}" FontSize="14" Margin="0,3,20,0" FontFamily="Segoe UI"/>
                </StackPanel-->
                <Grid Margin="0,5,0,2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="80"/>
                        <!-- Label -->
                        <ColumnDefinition Width="160"/>
                        <!-- IP -->
                        <ColumnDefinition Width="64"/>
                        <!-- 'Subnet:' label -->
                        <ColumnDefinition Width="*"/>
                        <!-- Subnet IP -->
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="Current IP   :" Grid.Column="0" FontSize="14" FontWeight="SemiBold"/>
                    <TextBlock Text="{Binding CurrentIP}" Grid.Column="1" FontSize="14" FontFamily="Segoe UI"/>
                    <TextBlock Text="Gateway :" Grid.Column="2" FontSize="14" FontWeight="SemiBold"/>
                    <TextBlock Text="{Binding Gateway}" Grid.Column="3" FontSize="14" FontFamily="Segoe UI"/>
                </Grid>

                <!-- Scan Button with Progress Indicator - Simple Version -->
                <StackPanel Grid.Row="0" Grid.Column="1" HorizontalAlignment="Right">
                    <!-- Normal Scan Button -->
                    <Button Content="Scan Subnet" 
                            Command="{Binding ScanSubnetCommand}"
                            Width="120" Height="30" Background="#255DD4" Foreground="#ffffff" FontSize="13" FontWeight="SemiBold" FontFamily="Segoe UI">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Visibility" Value="Visible"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsScanning}" Value="True">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>

                    <!-- Scanning Progress Button -->
                    <Button Content="Scanning..." 
                            IsEnabled="False"
                            Width="120" Height="30"
                            Background="AliceBlue" Foreground="White">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsScanning}" Value="True">
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Device Table -->
        <Border Grid.Row="3" Margin="15,0,15,15" BorderBrush="#D0D0D0" BorderThickness="1">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Border Grid.Row="0" Background="#F8F8F8" BorderBrush="#D0D0D0" BorderThickness="0,0,0,1" Height="35">
                    <CheckBox Content="Select All" Margin="10,0,0,0"
                              VerticalAlignment="Center" FontFamily="Segoe UI" FontSize="13" FontWeight="SemiBold"
                          IsChecked="{Binding SelectAllDevices}"/>
                </Border>
                

                <DataGrid Grid.Row="1" ItemsSource="{Binding AvailableDevices}"
                          AutoGenerateColumns="False" HeadersVisibility="Column"
                          CanUserAddRows="False" SelectionMode="Extended"
                          AlternatingRowBackground="#F9F9F9">
                    <DataGrid.ColumnHeaderStyle>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="FontFamily" Value="Segoe UI"/>
                            <Setter Property="FontSize" Value="14"/>
                            <!-- or your preferred size -->
                            <Setter Property="FontWeight" Value="SemiBold"/>
                            <!-- optional -->
                        </Style>
                    </DataGrid.ColumnHeaderStyle>
                    <DataGrid.Columns>
                        <DataGridTemplateColumn Header="Select" Width="60" >
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <CheckBox IsChecked="{Binding IsSelected, UpdateSourceTrigger=PropertyChanged}" HorizontalAlignment="Center"
                                    FontFamily="Segoe UI"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <!--DataGridTemplateColumn Header="Status" Width="80">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Ellipse Width="8" Height="8" Fill="{Binding StatusColor}" HorizontalAlignment="Center"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn-->

                        <DataGridTextColumn Header="IP Address" Binding="{Binding IPAddress}" Width="150" IsReadOnly="True" FontFamily="Segoe UI" FontSize="14"/>
                        <DataGridTextColumn Header="Port" Binding="{Binding Port}" Width="100" IsReadOnly="True" FontSize="14"/>
                        <DataGridTextColumn Header="MAC Address" Binding="{Binding MacAddress}" Width="200" IsReadOnly="True" FontSize="14"/>
                    </DataGrid.Columns>
                </DataGrid>

                <!-- Scanning Overlay for DataGrid -->
                <Border Grid.Row="1" 
                        Background="#80FFFFFF">
                    <Border.Style>
                        <Style TargetType="Border">
                            <Setter Property="Visibility" Value="Collapsed"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsScanning}" Value="True">
                                    <Setter Property="Visibility" Value="Visible"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Border.Style>
                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                        <TextBlock Text="🔄 Scanning network for devices..." 
                                   FontSize="14" FontWeight="SemiBold" 
                                   Foreground="#4A90E2" HorizontalAlignment="Center"/>
                        <TextBlock Text="{Binding ScanProgressText}" 
                                   FontSize="12" 
                                   Foreground="#666" HorizontalAlignment="Center" 
                                   Margin="0,5,0,0"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>

        <!-- Bottom Buttons -->
        <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Center" Margin="15,0,15,15">
            <!--Button Content="Add All Devices" Command="{Binding AddAllDevicesCommand}"
                    Background="#28a745" Foreground="White"
                    Padding="15,8" Margin="0,0,10,0"/-->
            <Button Content="Manage Device"
                    Background="#255DD4" Foreground="White"
                    Padding="15,8" Margin="0,0,10,0" FontSize="13" FontWeight="SemiBold"
                    Click="ManageDevice_Click"/>

            <Button Content="Add Selected Devices" 
                    Background="#255DD4" Foreground="White"
                    Padding="15,8" FontSize="13" FontWeight="SemiBold"
                    Click="AddSelectedDevices_Click"/>

        </StackPanel>
    </Grid>

    <!-- Resources -->
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </UserControl.Resources>
</UserControl>