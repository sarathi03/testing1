<UserControl x:Class="testing1.Views.DeviceManagementView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:viewmodels="clr-namespace:testing1.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="1000">

    <UserControl.Resources>
        <!-- Built-in converter for Boolean to Visibility -->
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>

        <!-- Status Color Converter - Only green and red -->
        <Style x:Key="StatusIndicatorStyle" TargetType="Ellipse">
            <Setter Property="Width" Value="12"/>
            <Setter Property="Height" Value="12"/>
            <Setter Property="Margin" Value="5,0"/>
            <Setter Property="Fill" Value="Gray"/>

            <Style.Triggers>
                <DataTrigger Binding="{Binding DeviceInfo.Status}" Value="Connected">
                    <Setter Property="Fill" Value="Green"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding DeviceInfo.Status}" Value="Offline">
                    <Setter Property="Fill" Value="Red"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding DeviceInfo.Status}" Value="NotConnected">
                    <Setter Property="Fill" Value="Red"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <!-- Button Styles -->
        <Style x:Key="ActionButtonStyle" TargetType="Button">
            <Setter Property="Margin" Value="2"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="MinWidth" Value="80"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Background" Value="#255DD4"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>

        <!-- Configure Button Style -->
        <Style x:Key="ConfigureButtonStyle" TargetType="Button">
            <Setter Property="Margin" Value="2"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="Width" Value="85"/>
            <Setter Property="Height" Value="25"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontSize" Value="10"/>
            <Setter Property="Background" Value="#255DD4"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>

        <!-- Remove Button Style -->
        <Style x:Key="RemoveButtonStyle" TargetType="Button">
            <Setter Property="Margin" Value="2"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="Width" Value="85"/>
            <Setter Property="Height" Value="25"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontSize" Value="10"/>
            <Setter Property="Background" Value="#718096"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>

        <!-- DataGrid Row Style - Complete removal of selection highlighting -->
        <Style x:Key="DataGridRowStyle" TargetType="DataGridRow">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="Black"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#F0F8FF"/>
                </Trigger>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="White"/>
                    <Setter Property="Foreground" Value="Black"/>
                </Trigger>
                <MultiTrigger>
                    <MultiTrigger.Conditions>
                        <Condition Property="IsSelected" Value="True"/>
                        <Condition Property="IsMouseOver" Value="True"/>
                    </MultiTrigger.Conditions>
                    <Setter Property="Background" Value="#F0F8FF"/>
                </MultiTrigger>
            </Style.Triggers>
        </Style>

        <!-- DataGrid Cell Style - Remove cell selection highlighting but allow editing -->
        <Style x:Key="DataGridCellStyle" TargetType="DataGridCell">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="Transparent"/>
                    <Setter Property="Foreground" Value="Black"/>
                </Trigger>
                <Trigger Property="IsFocused" Value="True">
                    <Setter Property="Background" Value="Transparent"/>
                </Trigger>
                <!-- Allow editing mode to have normal background -->
                <Trigger Property="IsEditing" Value="True">
                    <Setter Property="Background" Value="White"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- TextBox Style for Search -->
        <Style x:Key="SearchTextBoxStyle" TargetType="TextBox">
            <Setter Property="BorderBrush" Value="#BDC3C7"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="8,5"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>
    </UserControl.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>



        <!-- Header -->
        <TextBlock Grid.Row="0" 
                   Text="Device Management Panel" 
                   FontSize="24" 
                   FontWeight="SemiBold" 
                   FontFamily="Segoe UI"
                   Margin="0,-15,0,20"
                   Foreground="Black"/>

        <!-- Search and Action Bar -->
        <Grid Grid.Row="1" Margin="0,0,0,15">
            <Grid.ColumnDefinitions>

                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Search Box -->
            <StackPanel Grid.Column="0" Orientation="Horizontal">
                <TextBlock Text="Search Device:" 
                           VerticalAlignment="Center" 
                           Margin="0,0,10,0"
                           FontWeight="SemiBold"
                           FontFamily="Segoe UI"
                           FontSize="14"/>
                <TextBox x:Name="SearchTextBox" 
                         Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                         Width="300" 
                         Height="37"
                         FontFamily="Segoe UI"
                         FontSize="14"
                         Style="{StaticResource SearchTextBoxStyle}"/>

                <Button Command="{Binding FilterCommand}"
                        Background="Transparent"
                        BorderThickness="0"
                        Padding="6">
                    <Image Source="/Images/funnel-plus.png" 
                       Width="20" 
                       Height="20"
                       Opacity="0.8"/>
                    <!-- Lower opacity makes it appear more delicate -->
                </Button>
            </StackPanel>

            <!-- Action Buttons -->
            <StackPanel Grid.Column="1" Orientation="Horizontal">
                <Button Content="➕ Add Device" 
                        Click="NavigateToDiscovery_Click"
                        Style="{StaticResource ActionButtonStyle}"
                        FontFamily="Segoe UI"
                        FontWeight="DemiBold"
                        FontSize="14"
                        Background="Transparent"
                        Foreground="Black"/>
            </StackPanel>
        </Grid>

        <!-- Devices DataGrid -->
        <DataGrid Grid.Row="2" 
                  ItemsSource="{Binding Devices}"
                  SelectedItem="{Binding SelectedDevice}"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  CanUserDeleteRows="False"
                  GridLinesVisibility="Horizontal"
                  HeadersVisibility="Column"
                  RowStyle="{StaticResource DataGridRowStyle}"
                  CellStyle="{StaticResource DataGridCellStyle}"
                  AlternatingRowBackground="#F8F9FA"
                  BorderBrush="#E0E0E0"
                  BorderThickness="1"
                  Margin="0,0,0,15"
                  SelectionMode="Single"
                  IsReadOnly="False" 
                  SelectionChanged="DataGrid_SelectionChanged">
            <DataGrid.ColumnHeaderStyle>
                <Style TargetType="DataGridColumnHeader">
                    <Setter Property="FontFamily" Value="Segoe UI"/>
                    <!-- or your preferred font -->
                    <Setter Property="FontSize" Value="14"/>
                    <Setter Property="FontWeight" Value="SemiBold"/>
                    <!-- or your preferred size -->
                </Style>
            </DataGrid.ColumnHeaderStyle>

            <DataGrid.Columns>
                <!-- Status Column - Using DataTriggers instead of converter -->
                <DataGridTemplateColumn Header="Status" Width="80" CanUserSort="False">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <Ellipse Style="{StaticResource StatusIndicatorStyle}" />
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <!-- IP Address Column -->
                <DataGridTextColumn Header="IP Address" 
                                    Binding="{Binding DeviceInfo.IP}" 
                                    Width="120" FontFamily="Segoe UI" FontSize="14"
                                    IsReadOnly="True"/>

                <!-- Device Name Column (Editable) -->
                <DataGridTemplateColumn Header="Device Name" Width="180">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding DeviceInfo.DeviceName}" 
                                       VerticalAlignment="Center" FontFamily="Segoe UI" FontSize="14" Margin="0,-12,0,0"
                                       Padding="5,0"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                    <DataGridTemplateColumn.CellEditingTemplate>
                        <DataTemplate>
                            <TextBox Text="{Binding DeviceInfo.DeviceName, UpdateSourceTrigger=PropertyChanged}" 
                                     BorderThickness="0"
                                     Background="Transparent"
                                     Padding="5,0"
                                     VerticalContentAlignment="Center"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellEditingTemplate>
                </DataGridTemplateColumn>

                <!-- Location Column (Editable) -->
                <DataGridTemplateColumn Header="Location" Width="150">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding DeviceInfo.Location}" 
                                       FontFamily="Segoe UI" FontSize="14" Margin="0,-12,0,0"
                                       VerticalAlignment="Center"
                                       Padding="5,0"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                    <DataGridTemplateColumn.CellEditingTemplate>
                        <DataTemplate>
                            <TextBox Text="{Binding DeviceInfo.Location, UpdateSourceTrigger=PropertyChanged}" 
                                     BorderThickness="0"
                                     Background="Transparent"
                                     Padding="5,0"
                                     VerticalContentAlignment="Center"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellEditingTemplate>
                </DataGridTemplateColumn>

                <!-- MAC Address Column -->
                <DataGridTextColumn Header="MAC Address" 
                                    Binding="{Binding DeviceInfo.MAC}" 
                                    FontFamily="Segoe UI" FontSize="14"
                                    Width="130"
                                    IsReadOnly="True"/>

                <!-- Actions Column -->
                <!-- Actions Column -->
                <DataGridTemplateColumn Header="Actions" Width="180" CanUserSort="False">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <!-- Configure Button with Icon -->
                                <Button Click="ConfigureButton_Click"
                        Style="{StaticResource ConfigureButtonStyle}"
                        Margin="2">
                                    <StackPanel Orientation="Horizontal">

                                        <TextBlock Text="Configure" 
                                   VerticalAlignment="Center"/>
                                    </StackPanel>
                                </Button>

                                <!-- Remove Button with Icon -->
                                <Button Command="{Binding DataContext.RemoveDeviceCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                        CommandParameter="{Binding}"
                        Style="{StaticResource RemoveButtonStyle}"
                        Margin="2">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="Remove" 
                                   VerticalAlignment="Center"/>
                                    </StackPanel>
                                </Button>
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Status Bar -->
        <Grid Grid.Row="3" 
              Background="#1A202C" 
              Height="35">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Device Count -->
            <StackPanel Grid.Column="0" 
                        Orientation="Horizontal" 
                        VerticalAlignment="Center" 
                        Margin="15,0">
                <TextBlock Text="Total Devices: " 
                           Foreground="White" 
                           FontWeight="SemiBold"
                           FontFamily="Segoe UI"
                           FontSize="12"/>
                <TextBlock Text="{Binding Devices.Count}" 
                           Foreground="#3498DB" 
                           FontWeight="Bold"
                           FontSize="12"/>
            </StackPanel>

            <!-- Loading Indicator - Using built-in BooleanToVisibilityConverter -->
            <StackPanel Grid.Column="1" 
                        Orientation="Horizontal" 
                        VerticalAlignment="Center" 
                        Margin="10,0"
                        Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}">
                <TextBlock Text="Loading..." 
                           Foreground="#255DD4" 
                           FontStyle="Italic"
                           Margin="0,0,5,0"/>
                <Border Width="16" Height="16">
                    <Border.RenderTransform>
                        <RotateTransform/>
                    </Border.RenderTransform>
                    <Border.Triggers>
                        <EventTrigger RoutedEvent="Loaded">
                            <BeginStoryboard>
                                <Storyboard RepeatBehavior="Forever">
                                    <DoubleAnimation Storyboard.TargetProperty="RenderTransform.Angle"
                                                     From="0" To="360" Duration="0:0:1"/>
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>
                    </Border.Triggers>
                    <Ellipse Fill="#E67E22" Width="3" Height="3" HorizontalAlignment="Left" VerticalAlignment="Top"/>
                </Border>
            </StackPanel>

            <!-- Selected Device Info - Using DataTrigger instead of NullToVisibilityConverter -->
            <StackPanel Grid.Column="2" 
                        Orientation="Horizontal" 
                        VerticalAlignment="Center" 
                        Margin="15,0">
                <StackPanel.Style>
                    <Style TargetType="StackPanel">
                        <Setter Property="Visibility" Value="Visible"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding SelectedDevice}" Value="{x:Null}">
                                <Setter Property="Visibility" Value="Collapsed"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </StackPanel.Style>
                <TextBlock Text="Selected: " 
                           Foreground="White"
                           FontSize="12"
                           FontFamily="Segoe UI"
                           FontWeight="SemiBold"/>
                <TextBlock Text="{Binding SelectedDevice.DeviceInfo.DeviceName}" 
                           Foreground="#3498DB" 
                           FontWeight="SemiBold"
                           FontSize="12"
                           FontFamily="Segoe UI"/>
                <TextBlock Text=" (" 
                           Foreground="White"
                           FontSize="12"
                           FontFamily="Segoe UI"/>
                <TextBlock Text="{Binding SelectedDevice.DeviceInfo.IP}" 
                           Foreground="#3498DB"
                           FontSize="12"
                           FontFamily="Segoe UI"/>
                <TextBlock Text=")" 
                           Foreground="White"
                           FontSize="12"
                           FontFamily="Segoe UI"/>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>